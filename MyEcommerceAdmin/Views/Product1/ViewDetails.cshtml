@model MyEcommerceAdmin.Models.Product

@{
    ViewBag.Title = "Detalles del producto";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

 
<link href="~/Content/MyContent/css/style.css" rel="stylesheet" />
<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <!-- Modal view slider -->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="aa-product-view-slider">
                                    <div id="demo-1" class="simpleLens-gallery-container">
                                        <div class="simpleLens-container">
                                            <div class="simpleLens-big-image-container"><a data-lens-image="@Url.Content(Model.PicturePath)" class="simpleLens-lens-image"><img src="@Url.Content(Model.PicturePath)" class="simpleLens-big-image"></a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal view content -->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h3><strong> @Model.Name</strong></h3>
                                    @*<div class="aa-product-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (ViewBag.AvgRate >= i)
                                            {
                                                <span class="fa fa-star" style="color: #ff6600"></span> }
                                            else
                                            {
                                                <span class="fa fa-star-o" style="color: #ff6600"></span>}
                                        }

                                    </div>*@

                                    <div class="aa-price-block">
                                        <span class="aa-product-view-price">$ <b> @Model.UnitPrice</b></span>
                                        @if (Model.UnitInStock > 0)
                                        {
                                            <p class="aa-product-avilability"><span style="color:white ;background-color:green">Disponible (@Model.UnitInStock)</span></p> }
                                        else
                                        {
                                            <p class="aa-product-avilability"><span style="color:white;background-color:red">No disponible</span></p>}
                                        @{ TempData["returnURL"] = Request.RawUrl; }


                                    </div>
                                    <p>@Model.ShortDescription</p>
                                    <div class="aa-prod-quantity">
                                        <h4>Cantidad:</h4>
                                        <form action="">
                                            <input type="number" name="quantity" min="1" max="99" maxlength="2" value="1" />
                                        </form>
                                    </div>
                                    <div class="aa-prod-view-bottom">
                                        @if (Model.UnitInStock > 0)
                                        {
                                            <a class="aa-add-to-cart-btn" href="@(Session["username"] != null ? Url.Action("AddToCart", "Product1", new { id=Model.ProductID}) : Url.Action("Login", "Account"))">Añadir al carrito</a> }
                                        else
                                        {
                                            <a class="aa-add-to-cart-btn" ))">Añadir al carrito</a>}
                                        @*<a class="aa-add-to-cart-btn" href="@(Session["username"] != null ? Url.Action("WishList", "Product1", new { id = Model.ProductID }) : Url.Action("Login", "Account"))">Wishlist</a>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <br /><br />
                    <!-- Related product -->
                    
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / product category -->
