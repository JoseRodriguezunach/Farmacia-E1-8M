@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Iniciar sesion</h4>

                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Usuario<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username">
                                    <label for="">Contraseña<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password">
                                    <button type="submit" class="btn btn-success">Acceder</button>
                                    @*<label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                                    <p class="aa-lost-password"><a href="#">Lost your password?</a></p>*@}

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>No tienes cuenta?</h4>
                                
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                    {
                                        <label for="">Nombres<span>*</span></label>
                                        <input name="First_Name" type="text" placeholder="Nombres">

                                        <label for="">Apellidos<span>*</span></label>
                                        <input name="Last_Name" type="text" placeholder="Apellidos">

                                        <label for="">Usuario<span>*</span></label>
                                        <input name="UserName" type="text" placeholder="Usuario">

                                        <label for="">Contraseña<span>*</span></label>
                                        <input name="Password" type="password" placeholder="Contraseña">

                                        <label for="">Correo<span>*</span></label>
                                        <input name="Email" type="text" placeholder="Correo">

                                        <label for="">Telefono<span>*</span></label>
                                        <input name="Phone" type="text" placeholder="Telefono">

                                        <label for="">Direccion<span></span></label>
                                        <input name="Address" type="text" placeholder="Direccion">

                                        <button type="submit" class="btn btn-primary">Registrarse</button>
                                      }

                               

                                <a href="@Url.Action("RegisterCustomer", "Account")" class="btn btn-primary btn-block fs-2">Registrarse</a>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
