@model IEnumerable<MyEcommerceAdmin.Models.Order>

@{
    ViewBag.Title = "Orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">

        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.OrderID)*@
                    <label>ID Orden</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Customer.CustomerID)*@
                    <label>ID Cliente</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Payment.PaymentID)*@
                    <label>ID Pago</label>
                </th>

                <th>
                    @*@Html.DisplayNameFor(model => model.Discount)*@
                    <label>Descuento</label>
                </th>

                <th>
                    @*@Html.DisplayNameFor(model => model.TotalAmount)*@
                    <label>Total</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.OrderDate)*@
                    <label>Fecha</label>
                </th>

                @*<th> </th>*@
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.CustomerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Payment.PaymentID)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
    
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>

                    @*<td>
                        @Html.ActionLink("Ver detalles", "Details", new { id = item.OrderID }, new{@class="btn btn-info"})
                        
                    </td>*@
                </tr>
            }

        </table>
    </div>

</div>

