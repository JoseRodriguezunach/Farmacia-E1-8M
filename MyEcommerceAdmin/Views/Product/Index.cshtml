@model IEnumerable<MyEcommerceAdmin.Models.Product>
@{
    ViewBag.Title = "Lista de productos";
}

<div class="row">
    <div class="col">
        <h2 class="text-info">Lista de productos</h2>
        <hr />
        <div class="d-flex justify-content-end mb-2">
            <a href="@Url.Action("Create", "Product")" class="btn btn btn-outline-primary"><i class="fa-regular fa-square-plus fs-1"></i></a>
        </div>
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th><label>Nombre</label></th>
                        <th><label>Proveedor</label></th>
                        <th><label>Categoria</label></th>
                        @*<th>@Html.DisplayNameFor(p => p.SubCategoryID)</th>*@
                        <th><label>Precio</label></th>
                        <th><label>Disponible</label></th>
                        <th>Editar/Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pdt in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => pdt.Name)</td>
                            <td>@Html.DisplayFor(p => pdt.Supplier.CompanyName)</td>
                            <td>@Html.DisplayFor(p => pdt.Category.Name)</td>
                            @*<td>@Html.DisplayFor(p => pdt.SubCategory.Name)</td>*@
                            <td>@Html.DisplayFor(p => pdt.UnitPrice)</td>
                            <td>@Html.DisplayFor(p => pdt.UnitInStock)</td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new {id = pdt.ProductID })" class="btn btn-outline-warning btn-sm"><i class="fa-solid fa-pen-to-square fs-4"></i></a>
                                @*<a href="@Url.Action("Details", "Product", new {id = pdt.ProductID })" class="btn btn-outline-info btn-sm"><i class="fa-regular fa-circle-info fs-4"></i></a>*@
                                <a href="@Url.Action("Delete", "Product", new {id = pdt.ProductID })" class="btn btn-outline-danger btn-sm"><i class="fa-regular fa-trash-arrow-up fs-4"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

